<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/img_popularity_tu"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/tv_popularity_name"
        app:layout_constraintLeft_toRightOf="@id/img_popularity_tu"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="银色新莽刺绣网纱底裤"
        android:textColor="@color/hei"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_popularity_trait"
        app:layout_constraintLeft_toRightOf="@id/img_popularity_tu"
        app:layout_constraintTop_toBottomOf="@id/tv_popularity_name"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:maxLines="1"
        android:text="薄如蝉翼,丝滑如肌肤"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_popularity_price"
        app:layout_constraintLeft_toRightOf="@id/img_popularity_tu"
        app:layout_constraintTop_toBottomOf="@id/tv_popularity_trait"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="¥99"
        android:textColor="@color/hong"
        android:textSize="16sp" />

    <TextView
        app:layout_constraintLeft_toRightOf="@id/tv_popularity_price"
        app:layout_constraintTop_toBottomOf="@id/tv_popularity_trait"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="5dp"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:paddingRight="10dp"
        android:paddingBottom="5dp"
        android:text="4色可选"
        android:textColor="#FD994B"
        android:textSize="16sp" />
</androidx.constraintlayout.widget.ConstraintLayout>