<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/renqi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="人气推荐"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/duo"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_margin="5dp"
        android:src="@mipmap/jianto"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="更多推荐"
        android:textColor="@color/hui"
        app:layout_constraintRight_toLeftOf="@id/duo"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/home_rcy_renqi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/renqi" />

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@drawable/select_guangao_kuang"
        app:layout_constraintTop_toBottomOf="@id/home_rcy_renqi"/>


</androidx.constraintlayout.widget.ConstraintLayout>