<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.youth.banner.Banner
            android:id="@+id/home_banner"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            app:layout_constraintTop_toTopOf="parent" />
        <LinearLayout
            android:id="@+id/ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            app:layout_constraintTop_toBottomOf="@id/home_banner">

            <TextView
                android:id="@+id/huati"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:drawableTop="@mipmap/huati"
                android:text="话题" />

            <TextView
                android:id="@+id/youxuan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:drawableTop="@mipmap/youxuan"
                android:text="优选" />

            <TextView
                android:id="@+id/tehui"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:drawableTop="@mipmap/tehui"
                android:text="特惠" />

            <TextView
                android:id="@+id/qiandao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:drawableTop="@mipmap/qiandao"
                android:text="签到" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/ll1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/ll">

            <ImageView
                android:id="@+id/img_home_xiaoxi"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="15dp"
                android:src="@mipmap/xiaoxi" />


            <com.example.dianshang.common.AutoTextView
                android:id="@+id/autoTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="15dp"
                android:background="#fff">

            </com.example.dianshang.common.AutoTextView>

            <Button
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/select_xiangqing"
                android:text="详情"
                android:textColor="@color/colorAccent" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="品牌制造商只供"
            android:textSize="20dp"
            android:id="@+id/pin"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ll1" />

        <ImageView
            android:id="@+id/gengduo"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_margin="5dp"
            android:src="@mipmap/jianto"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ll1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="更多推荐"
            android:layout_margin="5dp"
            android:textColor="@color/hui"
            app:layout_constraintRight_toLeftOf="@id/gengduo"
            app:layout_constraintTop_toBottomOf="@id/ll1"
             />
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/pin"
            android:id="@+id/home_rcy_pinpai"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cons_seckill"
            app:layout_constraintTop_toBottomOf="@id/home_rcy_pinpai"
            android:background="@color/bai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt_seckill"
                android:text="秒杀专场"
                android:textSize="17sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="13sp"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/txt_next"
                android:text="下一场18：00开始"
                android:layout_marginTop="2dp"
                app:layout_constraintLeft_toLeftOf="@id/txt_seckill"
                app:layout_constraintTop_toBottomOf="@id/txt_seckill"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/txt_time_left"
                android:text="本场结束剩余"
                app:layout_constraintTop_toTopOf="@id/txt_seckill"
                app:layout_constraintRight_toRightOf="@id/linea_time"
                app:layout_constraintLeft_toLeftOf="@id/linea_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:id="@+id/linea_time"
                app:layout_constraintTop_toBottomOf="@id/txt_time_left"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_time_hour"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:background="@drawable/shape_time_bg"
                    android:text="12"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="2dp"
                    android:textColor="@color/bai"
                    android:textSize="15sp" />

                <TextView
                    android:text=":"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:layout_marginHorizontal="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/tv_time_minute"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="12"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="2dp"
                    android:textColor="@color/bai"
                    android:background="@drawable/shape_time_bg"
                    android:textSize="15sp" />

                <TextView
                    android:text=":"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:layout_marginHorizontal="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/tv_time_second"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:background="@drawable/shape_time_bg"
                    android:textColor="@color/bai"
                    android:text="13"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="2dp"
                    android:textSize="15sp" />

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcl_seckill"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:paddingTop="10dp"
                android:paddingLeft="10dp"
                android:paddingBottom="20dp"
                android:nestedScrollingEnabled="false"
                app:layout_constraintTop_toBottomOf="@id/txt_next"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="新鲜事物"
            android:textSize="20dp"
            android:id="@+id/xin"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cons_seckill" />

        <ImageView
            android:id="@+id/geng"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_margin="5dp"
            android:src="@mipmap/jianto"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cons_seckill" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="更多推荐"
            android:layout_margin="5dp"
            android:textColor="@color/hui"
            app:layout_constraintRight_toLeftOf="@id/geng"
            app:layout_constraintTop_toBottomOf="@id/cons_seckill"
            />
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/xin"
            android:id="@+id/home_rcy_xin"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="人气推荐"
            android:textSize="20dp"
            android:id="@+id/renqi"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/home_rcy_xin" />

        <ImageView
            android:id="@+id/duo"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_margin="5dp"
            android:src="@mipmap/jianto"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/home_rcy_xin" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="更多推荐"
            android:layout_margin="5dp"
            android:textColor="@color/hui"
            app:layout_constraintRight_toLeftOf="@id/duo"
            app:layout_constraintTop_toBottomOf="@id/home_rcy_xin"
            />
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/renqi"
            android:id="@+id/home_rcy_renqi"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="专题精选"
            android:textSize="20dp"
            android:id="@+id/zhuanti"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/home_rcy_renqi" />

        <ImageView
            android:id="@+id/zhuan"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_margin="5dp"
            android:src="@mipmap/jianto"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/home_rcy_renqi" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="更多推荐"
            android:layout_margin="5dp"
            android:textColor="@color/hui"
            app:layout_constraintRight_toLeftOf="@id/zhuan"
            app:layout_constraintTop_toBottomOf="@id/home_rcy_renqi"
            />
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/zhuan"
            android:id="@+id/home_rcy_zhuanti"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="猜你喜欢"
            android:layout_margin="5dp"
            android:textColor="@color/hui"
            android:id="@+id/caini"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/home_rcy_zhuanti"
            />
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/caini"
            android:id="@+id/home_rcy_caini"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>