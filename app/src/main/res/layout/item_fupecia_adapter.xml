<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/zhuanti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="专题精选"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/zhuan"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_margin="5dp"
        android:src="@mipmap/jianto"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="更多推荐"
        android:textColor="@color/hui"
        app:layout_constraintRight_toLeftOf="@id/zhuan"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:src="@drawable/ic_launcher_background"
        app:layout_constraintTop_toBottomOf="@id/zhuanti"
        android:id="@+id/img_fupecia_pian"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="去去去去去去去去去去"
        app:layout_constraintTop_toBottomOf="@id/img_fupecia_pian"
        android:textSize="20dp"
        android:id="@+id/tv_fupecia_name"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textStyle="bold"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/hong"
        android:text="$99"
        android:id="@+id/tv_fupecia_qian"
        app:layout_constraintTop_toBottomOf="@id/img_fupecia_pian"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="去去去去去去去去去去"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toBottomOf="@id/tv_fupecia_name"
        android:textSize="20dp"
        android:id="@+id/tv_fupecia_title"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@drawable/select_guangao_kuang"
        app:layout_constraintTop_toBottomOf="@id/tv_fupecia_title" />
</androidx.constraintlayout.widget.ConstraintLayout>