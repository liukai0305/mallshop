<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <RelativeLayout
        android:id="@+id/rly"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/select_guangao_kuang">

        <ImageView
            android:id="@+id/img_home_xiaoxi"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="15dp"
            android:src="@mipmap/xiaoxi" />

        <com.example.dianshang.common.AutoTextView
            android:id="@+id/autoTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="15dp"
            android:background="#fff"></com.example.dianshang.common.AutoTextView>

        <Button
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/select_xiangqing"
            android:text="详情"
            android:textColor="@color/colorAccent" />

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>