<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="150dp"
    android:layout_height="wrap_content"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:scaleType="fitCenter"
        android:layout_marginTop="30dp"

        android:layout_marginLeft="35dp"
        android:id="@+id/img_new_tu"
        />

    <TextView
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="银色星芒刺绣网纱底裤"
        android:textColor="@color/hei"
        android:maxLines="1"
        app:layout_constraintTop_toBottomOf="@id/img_new_tu"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:id="@+id/tv_new_name"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_new_name"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="薄如蝉翼,丝滑如肌肤"
        android:gravity="center"
        android:textSize="16sp"
        android:id="@+id/tv_new_trait"
        android:maxLines="1"
        android:layout_marginTop="5dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="￥99"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/tv_new_trait"
        android:layout_marginTop="5dp"
        android:textColor="@color/hong"
        android:id="@+id/tv_new_price"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/tv_new_price"
        android:layout_marginTop="10dp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>